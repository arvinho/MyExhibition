<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="main_btn_style">
		<item name="android:button">@null</item>
		<item name="android:textSize">10dp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">4dp</item>
		<item name="android:scaleType">fitStart</item>
		<item name="android:layout_weight">0.6</item>
		<item name="android:background">@drawable/radiobuttonselector</item>
	</style>

	<style name="show_btn_style">
		<item name="android:button">@null</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawablePadding">4dp</item>
		<item name="android:layout_weight">1.0</item>
		<item name="android:background">@drawable/radiobuttonselector</item>
	</style>

	<style name="CustomWindowTitleBackground">
		<item name="android:background">@color/white</item>
	</style>
	<style name="activityTitlebar" parent="android:Theme">
		<item name="android:theme">@android:style/Theme.Light</item>
		<item name="android:windowTitleSize">47dp</item>
		<item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
	</style>

</resources>
